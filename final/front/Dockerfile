# Etapa 1: Build de la app Angular
FROM node:18-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

CMD [ "ls" ]

COPY . .
RUN npm run build

# Etapa 2: Imagen de producci칩n con NGINX
FROM nginx:alpine

# Configuraci칩n de NGINX para servir la aplicaci칩n Angular  
# Copia SOLO el build est치tico (browser) al directorio de NGINX
COPY --from=build /app/dist/ /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]